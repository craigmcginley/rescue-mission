<h2><%= @question.title %></h2>

<p><%= @question.body_html.html_safe %></p>

Posted by:

<br>
<%= form_for [@question, @answer] do |f| %>
  <strong>Answer This Question (at least 50 characters):</strong>
  <%= f.text_area :body %>
  <%= f.submit %>
<% end %>

<h3>Answers:</h3>
<ul>
  <% @question.answers.order(created_at: :desc).each do |answer| %>
    <li>
      <%= answer.body_html.html_safe %> |
      <%= form_for answer do |f| %>
        <%= f.submit, value: "Best Answer" %>
      <% end %>

    </li>
  <% end %>
</ul>

<br>
<% if signed_in? %>
  <% if session[:user_id] == @question.user_id %>
    <%= link_to 'Edit', edit_question_path(@question) %>
    <%= link_to 'Delete', question_path(@question), method: :delete %>
    <br>
  <% end %>
<% end %>
<%= link_to 'Back to All Questions', questions_path %>
